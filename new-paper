document.getElementById('form-pedido').addEventListener('submit', function (e) {
    var idprov = document.getElementById('provID').value;
    var fechaVencimiento = document.getElementById('fecha-vencimiento').value;
    var detalle = document.querySelector('#tb-detalle tbody').children;
    if (idprov == '') {
        e.preventDefault();
        $('#alertCuerpo').html('<h6>Debe seleccionar un proveedor</h6>');
        $('#alertModal').modal('toggle');
    }else if (fechaVencimiento == '') {
        e.preventDefault();
        $('#alertCuerpo').html('<h6>Debes Insertar la Fecha de Vencimiento</h6>');
        $('#alertModal').modal('toggle');
    }
    else if (detalle.length < 1) {
        e.preventDefault();
        $('#alertCuerpo').html('<h6>No es posible registrar un pedido sin productos agregados</h6>');
        $('#alertModal').modal('toggle');
    }
});





<div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="alertModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h5 class="modal-title text-warning" id="exampleModalCenterTitle">Atenciï¿½n</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <div class="modal-body" id="alertCuerpo">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
