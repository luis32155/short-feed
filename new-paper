document.getElementById('form-pedido').addEventListener('submit', function (e) {
    var idprov = document.getElementById('provID').value;
    var fechaVencimiento = document.getElementById('fecha-vencimiento').value;
    var detalle = document.querySelector('#tb-detalle tbody').children;
    if (idprov == '') {
        e.preventDefault();
        $('#alertCuerpo').html('<h6>Debe seleccionar un proveedor</h6>');
        $('#alertModal').modal('toggle');
    }else if (fechaVencimiento == '') {
        e.preventDefault();
        $('#alertCuerpo').html('<h6>Debes Insertar la Fecha de Vencimiento</h6>');
        $('#alertModal').modal('toggle');
    }
    else if (detalle.length < 1) {
        e.preventDefault();
        $('#alertCuerpo').html('<h6>No es posible registrar un pedido sin productos agregados</h6>');
        $('#alertModal').modal('toggle');
    }
});
